---
import ThemeToggle from "@/components/ThemeToggle.astro";
import { basics } from "@cv";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { image, summary } = basics;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<style is:global>
  /* ================================ */
  /*   Variables de color del tema    */
  /* ================================ */
  :root {
    --bg-color: #ffffff;
    --text-color: #111111;
    --secondary-text: #666;
  }

  .dark {
    --bg-color: #383838;
    --text-color: #e8e8e8;
    --secondary-text: #aaaaaa;
  }

  /* ================================ */
  /*      Estilos generales           */
  /* ================================ */
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: var(--bg-color);
    color: var(--text-color);
    letter-spacing: -0.025rem;
    transition:
      background 0.25s ease,
      color 0.25s ease;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    color: var(--text-color);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4,
  time {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: var(--secondary-text);
  }

  p {
    color: var(--text-color);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  /* ================================ */
  /*      Toggle de tema              */
  /* ================================ */
  .theme-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    cursor: pointer;
    border: none;
    background: transparent;
    font-size: 1.4rem;
    line-height: 1;
    padding: 0.3rem;
    z-index: 50;
  }

  .theme-toggle .light {
    display: inline;
  }

  .theme-toggle .dark {
    display: none;
  }

  html.dark .theme-toggle .light {
    display: none;
  }
  html.dark .theme-toggle .dark {
    display: inline;
  }

  /* ================================ */
  /*             PRINT                */
  /* ================================ */
  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
</style>
